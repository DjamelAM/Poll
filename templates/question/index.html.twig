{% extends 'base.html.twig' %} {% block title %}Question index{% endblock %} {%
block body %}
<h1>Question index</h1>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Label</th>
      <th>IsMultiAnswer</th>
      <th>actions</th>
    </tr>
  </thead>
  <tbody>
    {% for question in questions %}
    <tr>
      <td>{{ question.id }}</td>
      <td>{{ question.label }}</td>
      <td>{{ question.isMultiAnswer ? "Yes" : "No" }}</td>

      <td>
        <a href="{{ path('question_show', { id: question.id }) }}">show</a>
        {% if app.user %}
        <a href="{{ path('question_edit', { id: question.id }) }}">edit</a>
        {% endif %}
      </td>
    </tr>
    {% else %}
    <tr>
      <td colspan="4">no records found</td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{{ knp_pagination_render(questions) }}

<a href="{{ path('question_new') }}">Create new</a>
{% endblock %}
